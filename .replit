args = "Discord Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Bot Dev"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Register Commands"

[[workflows.workflow]]
name = "Discord Bot"
author = "agent"

[[workflows.workflow.tasks]]

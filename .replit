args = "wrangler dev --port 5000 --local"
waitForPort = 5000

[[workflows.workflow]]
name = "Discord Bot Dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "wrangler dev --port 5000 --local"
